// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "isBackground": true,        
        "group": "build",
        "label": "jekyll build",
        "command": "jekyll build",
        "windows": {
          "command": "jekyll build"
        },
        "options": {
          "cwd": "${workspaceRoot}"
        }
      },
      {
        "type": "shell",
        "isBackground": true,        
        "group": "serve",
        "label": "jekyll serve",
        "command": "jekyll serve",
        "windows": {
          "command": "jekyll serve"
        },
        "options": {
          "cwd": "${workspaceRoot}"
        }
      }
    ]
  }